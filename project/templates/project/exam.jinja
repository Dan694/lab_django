{% extends "project/layout.jinja" %}
{% block body %}
<h1>Іспити</h1>


    <table border="1">
        <thead>
            <tr>
                <th>Назва предмета</th>
                <th>Ім'я студента</th>
                <th>Прізвище студента</th>
                <th>Дата іспиту</th>
                <th>Оцінка</th>
            </tr>
        </thead>
        <tbody>
            {% for exam in exams %}
                <tr>
                    
                    <td>{{ exam.subject.name }}</td>
                    <td>{{ exam.student.first_name }}</td>
                    <td>{{ exam.student.last_name }}</td>
                    <td>{{ exam.date }}</td>
                    <td>{{ exam.mark }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}